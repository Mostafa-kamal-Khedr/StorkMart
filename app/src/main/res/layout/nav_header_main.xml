<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0B86CE"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.visionstech.storkmart.Activity.MainActivity"

    android:theme="@style/AppTheme.NoActionBar"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
android:src="@drawable/ic_menu_user_image_hdpi"

        />

    <TextView
        android:id="@+id/tv_nanigationMenu_userName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahmed Bin Ali"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
android:fontFamily="@font/cocon_nextarabiclight_0"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:textAppearanceMedium" />



</RelativeLayout>
