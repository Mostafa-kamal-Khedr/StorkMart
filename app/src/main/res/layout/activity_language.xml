<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_hdpi"

    tools:context="com.example.visionstech.storkmart.Activity.LanguageActivity">


    <LinearLayout
        android:id="@+id/LanguageButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D8D8D8"
        android:orientation="horizontal"

        android:paddingBottom="20dp"
        android:paddingTop="20dp">


        <Button
            android:id="@+id/btn_language_activity_english"

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/ic_forgetpassword_btn_hdpi"
            android:fontFamily="@font/cocon_nextarabiclight_0"
            android:onClick="selec_en"
            android:text="English"
            android:textAppearance="?android:textAppearanceLarge"

            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btn_language_activity_arabic"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/ic_btn_ar_hdpi"
            android:fontFamily="@font/cocon_nextarabiclight_0"
            android:onClick="selec_ara"
            android:text="العربية"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white" />


    </LinearLayout>


</RelativeLayout>
